<div class="container">
  <div class="row justify-content-center">
    <h1>This is all cocktails</h1>
  </div>
  <div class="row justify-content-center">
    <% @cocktails.each do |c| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card-cocktail">
          <div>
            <h2><%= c.name %></h2>
            <%= link_to "View", cocktail_path(c.id) %>
          </div>
        </div>
      </div>
    <% end  %>
  </div>
</div>